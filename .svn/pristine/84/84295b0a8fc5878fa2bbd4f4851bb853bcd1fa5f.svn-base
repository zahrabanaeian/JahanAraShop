@model JahanAraShop.Models.GoodViewModel
@{
    ViewBag.Title = "نگین جهان آرا طوس";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main">
    <!--header-->
    <div class="hero-banner" style="margin-top:0px;">

        <div class="slider-wrapper">
            <div class="slider">
                <h1 hidden>آرایشی جهان آرا</h1>
                <div class="fs_loader"></div>
                @foreach (var item in Model.SlideShows)
                {
                    if (System.IO.File.Exists(Server.MapPath(JahanAraShop.Application.Resources.Paths.ImageFolder + "Slider/") + item.Picture))
                    {
                        <div class="slide">
                            <img src="~/Content/images/slider/@item.Picture" alt="لوارم آرایشی جهان آرا" data-in="fade" />
                            @*<h3 data-position="360,230" data-in="top" data-delay="200" class="pri-color text-uppercase ">همه چیز</h3>
                                <h2 data-position="410,220" data-in="top" data-delay="300" class="pri-font">
                                    <strong>تا <span class="pri-color">30<sup>%<br>تخفیف</sup></span></strong>
                                </h2>
                                <h3 data-position="550,220" data-in="top" data-delay="300" class="text-uppercase text-box">در همه لوازم آرایشی !</h3>*@
                        </div>
                    }
                    else
                    {
                        <div class="slide">
                            <img src="~/Content/images/Products/defult.png" alt="نگین جهان آرا طوس" data-in="fade" />
                        </div>

                    }
                }

            </div>
        </div>
    </div>
    <!--banner-->
    <div class="shop-feature sec-mar sec-padding bg-soft-gray">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 shp-ftr-wrap">
                    <div class="feature-box">
                        <h5><span class="icon icofont icofont-free-delivery"></span>ارسال رایگان</h5>
                        <span class="sub-text"> ارسال رایگان برای خریدهای بالای 150 هزار تومان و شهر مشهد.</span>
                    </div>
                    <div class="feature-box">
                        <h5><span class="icon icofont icofont-reply"></span>تعویض کالا</h5>
                        <span class="sub-text">تعویض یا برگشت کالا در 30 روز.</span>
                    </div>
                    <div class="feature-box">
                        <h5><span class="icon icofont icofont-money"></span>تضمین بهترین قیمت</h5>
                        <span class="sub-text">مطمئن ترین متد پرداخت.</span>
                    </div>
                    <div class="feature-box">
                        <h5><span class="icon icofont icofont-live-support"></span>پشتیبانی 7/24</h5>
                        <span class="sub-text">بهترین پشتیبانی</span>
                    </div>
                </div>
                <!--support-->
            </div>
        </div>
    </div>
    <!--shop feature-->

    <div class="fet-cat sec-mar gutter-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="fet-box cat-2 top-left text-white border bm-10">
                        <figure>
                            <a href="#" class="link-layer">&nbsp;</a>
                            <h2 class="text-uppercase">
                                @*<span>BOURJOIS</span>
                                    collection*@
                            </h2>
                            <img src="~/Content/images/home/col3.jpg" alt="بیادرما" />
                        </figure>
                    </div>
                    <!--first-->
                    <div class="fet-box cat-2 bottom-left">
                        <figure>
                            <a href="#" class="link-layer">&nbsp;</a>
                            <h2 class="text-uppercase">
                                @*<span>BABAEIA</span>
                                    collection*@
                            </h2>
                            <img src="~/Content/images/home/col2.jpg" alt="آنی" />
                        </figure>
                    </div>
                    <!--second-->
                </div>
                <!--left-->
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="fet-box cat-2 center-right text-white border bm-10">
                        <figure>
                            <a href="#" class="link-layer">&nbsp;</a>
                            <h2 class="text-uppercase">
                                @*<span>ISADORA</span>
                                    collection*@
                            </h2>
                            <img src="~/Content/images/home/col1.jpg" alt="آدیداس" />
                        </figure>
                    </div>
                    <!--third-->
                    <div class="fet-box cat-2 center-left heilight">
                        <figure>
                            <a href="#" class="link-layer">&nbsp;</a>
                            <h2 class="text-uppercase">
                                @*<span>MARCJOSEPH</span>*@

                            </h2>
                            <img src="~/Content/images/home/col4.jpg" alt="نوبا" />

                        </figure>
                    </div>
                    <!--third-->
                </div>
            </div>
        </div>
    </div>
    <!--feature category-->
    <div class="feature-item sec-mar">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12 text-center">
                    @{
                        if (Model.NewestGoods.Count != 0)
                        {
                            <div class="title mid-sep">
                                <h2>جدیدترین کالاها</h2>
                            </div>
                        }
                    }
                </div>
                <!--title bar-->
                <div class="col-md-12 col-sm-12 col-xs-12 product-wrap dir">
                    <ul class="products">
                        @foreach (var item in Model.NewestGoods)
                        {
                            <li class="product last">
                                <figure class="img-animi">
                                    <div class="actions trans">
                                        <a class="link-layer" href="#">&nbsp;</a>

                                        <a href="#" class="actn add-to-favorite" data-toggle="tooltip" data-placement="top" title="Add to Wishlist"><i class="pe-7s-like"></i></a>
                                        <a href="#" class="actn
                                           " data-toggle="tooltip" data-placement="top" title="Add to Cart"><i class="pe-7s-cart"></i></a>
                                        <a href="#quick-view-popup" class="actn" data-toggle="tooltip" data-placement="top" data-rel="quickview-popup" title="Quick View"><i class="pe-7s-look"></i></a>
                                    </div>
                                    @if (System.IO.File.Exists(Server.MapPath(JahanAraShop.Application.Resources.Paths.ImageFolder + "Products" + "/") + item.BarCode + ".png"))
                                    {

                                        <a href="@Url.Action(MVC.Product.Product(item.ID))"><img src='@(JahanAraShop.Application.Resources.Paths.ImageFolder)Products/@(item.BarCode).png' alt=""></a>
                                    }
                                    else
                                    {

                                        <a href="@Url.Action(MVC.Product.Product(item.ID))"> <img src='@(JahanAraShop.Application.Resources.Paths.ImageFolder)Products/defult.png' alt="اخبار ارایشی و بهداشتی" title=""></a>
                                    }

                                </figure>
                                <div class="price-wrap">
                                    <div class="price">
                                        @*<del>@item.RetailPrice.Value.ToString("#,##0")</del>*@
                                        <ins>@item.RetailPrice.Value.ToString("#,##0") ریال</ins>
                                    </div>
                                    @*<div class="star-rate">
                                            <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-half-full"></i>
                                        </div>*@
                                </div>
                                <h4><a href="@Url.Action(MVC.Product.Product(item.ID))">@item.Name</a></h4>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
