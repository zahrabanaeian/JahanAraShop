    <div class="news blog-holder modern bm-50">
        <div class="container">
            <div class="title mid-sep text-center"><h2>آخرین خبرها</h2></div>
            <div class="row dir">
                @foreach (var item in Model.TblSiteInformations)
                {
                <div class="col-md-6 col-sm-6 col-xs-12 dirfloat">
                    <div class="blog-wrap">
                        <figure class="img-animi">
                            <a href="@Url.Action(MVC.News.Index())">
                                <img src="~/Content/images/News/@item.LargePicture" alt="خبرهای جهان آرا" />
                            </a>
                        </figure>
                        <div class="post-wrap">
                            <div class="entry-info">
                                <span class="entry-date pri-bg">@item.FarsiCreateDate</span>
                                <span class="comment-count"><a href="#"><i class="fa fa-comments"></i> 5</a></span>
                            </div>
                            <h5 class="post-title">
                                <a href="@Url.Action(MVC.News.Index())">@item.FarsiTitle</a>
                            </h5>
                            <p>
                                @item.FarsiSmallDescription
                            </p>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
