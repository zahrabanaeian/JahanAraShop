@model JahanAraShop.Domain.DomainModel.tblOrganization
@{
    ViewBag.Title = "پروفایل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dash-pg-header pg-header style2">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 flx-element wrap">
                <div class="left">
                    <h4 class="bm-0 text-white">حساب کاربری شما</h4>
                </div>
                <!--left-->
                <ul class="breadcrumb">
                    <li class="active">حساب کاربری</li>
                    <li><a href="@Url.Action(MVC.Home.Index())">صفحه اصلی</a></li>

                </ul>
            </div>
        </div>
    </div>
</div>
<main class="dash-content bg-soft-gray sec-padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <nav class="account-nav">
                    <ul>
                        <li>
                            <a href="dashboard.html">
                                <span class="icon radius-circle"><i class="pe-7s-keypad"></i></span> داشبورد
                            </a>
                        </li>
                        <li>
                            <a href="orders.html">
                                <span class="icon radius-circle"><i class="pe-7s-cart"></i></span> سفارشات شما
                            </a>
                        </li>
            
                            <li>
                                <a href="addresses.html">
                                    <span class="icon radius-circle"><i class="pe-7s-map-marker"></i></span> تغییر پسورد
                                </a>
                            </li>
                        <li class="active">
                            <a href="@Url.Action(MVC.User.Index())">
                                <span class="icon radius-circle"><i class="pe-7s-user"></i></span> پروفایل
                            </a>
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()">
                                <span class="icon radius-circle"><i class="pe-7s-plug"></i></span> خروج
                            </a>
                        }
                    </li>
                </ul>
            </nav>
            <div class="account-content dir">
                <form method="post">
                    <div class="row">
                        <div class="form-group col-sm-6 dirfloat"> 
                            @Html.LabelFor(m => m.FirstName)
                            @Html.TextBoxFor(m => m.FirstName)    
                        </div>
                        <!--first name-->
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name)
                            
                        </div>
                        <!--last name-->
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email)
                            
                        </div>
                        <!--email address-->

                        <div class="form-group col-sm-6">
                           @Html.LabelFor(m => m.CellPhone)
                           @Html.TextBoxFor(m => m.CellPhone)
                        </div>
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(m => m.Phone1)
                            @Html.TextBoxFor(m => m.Phone1)
                        </div>
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(m => m.PostalCode)
                            @Html.TextBoxFor(m => m.PostalCode)
                        </div>
                        <div class="form-group col-sm-6">
                            @Html.LabelFor(m => m.FarsiBirthDate)
                            @Html.TextBoxFor(m => m.FarsiBirthDate)
                        </div>
                        <div class="form-group col-sm-6">
                           @Html.LabelFor(m => m.FarsiMarriageDate)
                        @Html.TextBoxFor(m => m.FarsiMarriageDate)
                        </div>
                        <div class="form-group col-sm-6">
                            <label>شهر</label>
                            @*@Html.DropDownListFor(m => m.CityId, (IEnumerable<SelectListItem>)Model.Counties, new { @class = "name-element txt CityId input-validation-error", data_val = "true",  dir = "auto", id = "CityId" })*@
                        </div>
                        <div class="form-group col-sm-6">
                            <label>استان</label>
                            @*@Html.DropDownListFor(m => m.ProvinceId, Model.States, new { @class = "name-element txt ProvinceId input-validation-error", data_val = "true",  dir = "auto", id = "ProvinceId" })*@
                        </div>
                        
                        @*<div class="form-group col-sm-6">
                            <label>پسورد فعلی</label>
                            <input type="password">
                        </div>
                        <!--current pass-->
                        <div class="form-group col-sm-6">
                            <label>پسورد جدید</label>
                            <input type="password">
                        </div>
                        <!--new pass-->
                        <div class="form-group col-sm-12">
                            <label>تایید پسورد</label>
                            <input type="password">
                        </div>*@
                        <!--confirm pass-->
                        <div class="form-group col-sm-12">
                            <input style="float:left"  type="submit" value="ویرایش اطلاعات">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</main>
<!--main-->