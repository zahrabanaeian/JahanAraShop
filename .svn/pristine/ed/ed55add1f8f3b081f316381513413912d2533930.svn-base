using JahanAraShop.Domain.DomainModel;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;

namespace JahanAraShop.Helper
{
    public static class Pagination
    {
        public static PagedData<T> PagedResult<T>( this List<T> list,List<tblGoodType> GoodTypes, List<int> Brands, int PageNumber,int PageSize,decimal? Minprice,decimal? Maxprice) where T:class
        {

            var result = new PagedData<T>();
            result.Data = list.Skip(PageSize * (PageNumber - 1)).Take(PageSize).ToList();
            result.TotalPages = Convert.ToInt32(Math.Ceiling((double)list.Count() / PageSize));
            result.CurrentPage = PageNumber;
            result.GoodTypes = GoodTypes;
            result.ChekedBrands = Brands;
            result.MinPrice = Minprice;
            result.MaxPrice = Maxprice;
  
            return result;


        }

    }
}