@model JahanAraShop.Models.LoginViewModel
@{
    ViewBag.Title = "ورود";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ var str = "";
    str = ViewBag.ReturnUrl;
}
@using (Html.BeginForm(MVC.Account.Login(str), FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
   
    <main class="main">
        <div class="container">
            <div class="row sec-padding">
                <div class="col-md-12 col-sm-12">
                    <div class="login-wrap">
                        <div class="bm-30">
                            @Html.ValidationSummary(true, "", new { @class = "blockdisp text-danger" })
                            <span class="icon lh"><i class="icofont icofont-ui-unlock"></i></span>
                            <h3>ورود به حساب کاربری</h3>
                        </div>                      
                            <div class="form-group">
                                <label>نام کاربری <span>*</span></label>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = " تلفن همراه ", @class = "dir" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "blockdisp text-danger" })
                            </div>
                            <div class="form-group">
                                <label>پسورد <span>*</span></label>
                                @Html.PasswordFor(m => m.Password, new { placeholder = " *************", @class = "dir" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "blockdisp text-danger" })
                            </div>
                            <div class="form-group flx-element">
                                <div class="check-wrap">
                                    <input type="checkbox">
                                    <label>ما را به خاطر بسپار</label>
                                </div>
                                <a href="@Url.Action(MVC.Account.ForgotPassword())" class="dir">پسورد خود را فراموش کرده اید؟</a>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="ورود">
                            </div>
                            هنوز عضو جهان آرا نشده اید؟ <a href="@Url.Action(MVC.Account.Register())"><strong>ثبت نام کنید</strong></a>
                       
                    </div>
                </div>
            </div>
        </div>
    </main>
}

