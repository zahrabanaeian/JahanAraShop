@model JahanAraShop.Areas.Admin.Models.SlideShowViewModel
@{
    ViewBag.Title = "SlidShow";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>

        <div class='col-xs-12'>
            <div class="page-title">

                <div class="pull-right">
                    <!-- PAGE HEADING TAG - START --><h1 class="title">File Uploader - Custom</h1><!-- PAGE HEADING TAG - END -->
                </div>

                <div class="pull-left hidden-xs">
                    <ol class="breadcrumb">
                        <li>
                            <a href="index.html"><i class="fa fa-home"></i>Home</a>
                        </li>
                        <li>
                            <a href="form-fileupload-dropzone.html">File Uploader</a>
                        </li>
                        <li class="active">
                            <strong>Custom Uploader</strong>
                        </li>
                    </ol>
                </div>

            </div>
        </div>
        <div class="clearfix"></div>
        <!-- MAIN CONTENT AREA STARTS -->

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-right">Custom Uploader</h2>
                    <div class="actions panel_actions pull-left">
                        <a class="box_toggle fa fa-chevron-down"></a>
                        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                        <a class="box_close fa fa-times"></a>
                    </div>
                </header>
                <div class="content-body dr ">
                    @using (Html.BeginForm("SlideShow", "Panel", FormMethod.Post, new { id = "Details", @class = "checkout sec-mar", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "blockdisp text-danger" })

                        <div class="row ">
                          
                            <div class="alert alert-success alert-dismissible fade in"  hidden id="alerts">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                                 @TempData["message"]
                            </div>
                           
                            <div class="col-xs-12">
                                <div class="custom-dropzone row">
                                    <div class="col-sm-8 ">
                                        <input type="file" id="fileUp" accept=".Jpg,.png,.jpg,.jpeg,.bmp" title="search image" name="imgFa" dir="ltr" />
                                    </div>                                
                                </div>
                            </div>

                            <div class="col-xs-6  fl">
                                @Html.LabelFor(m => m.SlideShow.FarsiTitle)
                                @Html.TextBoxFor(m => m.SlideShow.FarsiTitle, new { @class = "form-control" })
                                

                                @Html.LabelFor(m => m.SlideShow.FarsiDescription)
                                @Html.TextBoxFor(m => m.SlideShow.FarsiDescription, new { @class = "form-control" })
                                
                                <label>وضعیت نمایش</label>
                                @Html.DropDownListFor(m => m.SlideShow.IsEnabled, (IEnumerable<SelectListItem>)Model.listVisible, new { id = "Visible", @class = "name-element txt form-control", name = "fcVisible" })
                                
                                <label>اولویت</label>
                                @Html.TextBoxFor(m => m.SlideShow.Priority, new { @class = "form-control" })
                                <br />
                                <div class="form-group">

                                    <button type="submit" class="btn btn-purple  pull-left">ثبت</button>
                                </div>
                            </div>


                        </div>
                    }
                </div>


            </section>
        </div>


        <!-- MAIN CONTENT AREA ENDS -->
    </section>
</section>
<script type="text/javascript">
    jQuery(document).ready(function () {

        var success = @((TempData["message"] != null).ToString().ToLower());    
        if(success==true)
        {
            $("#alerts").show();

        }


    });

</script>