@model JahanAraShop.Models.InvoiceViewModel
@{
    ViewBag.Title = "پروفایل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/PersianDatePicker.min.css" rel="stylesheet" />

<div class="dash-pg-header pg-header style2">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 flx-element wrap">
                <div class="left">
                    <h4 class="bm-0 text-white">حساب کاربری شما</h4>
                </div>
                <!--left-->
                <ul class="breadcrumb">
                    <li class="active">حساب کاربری</li>
                    <li><a href="@Url.Action(MVC.Home.Index())">صفحه اصلی</a></li>

                </ul>
            </div>
        </div>
    </div>
</div>
<main class="dash-content bg-soft-gray sec-padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <nav class="account-nav">
                    <ul>
                        <li>
                            <a href="dashboard.html">
                                <span class="icon radius-circle"><i class="pe-7s-keypad"></i></span> داشبورد
                            </a>
                        </li>
                        <li>
                            <a href="orders.html">
                                <span class="icon radius-circle"><i class="pe-7s-cart"></i></span> سفارشات شما
                            </a>
                        </li>

                        <li>
                            <a href="@Url.Action(MVC.Account.ChangePassword())">
                                <span class="icon radius-circle"><i class="pe-7s-map-marker"></i></span> تغییر پسورد
                            </a>
                        </li>
                        <li class="active">
                            <a href="@Url.Action(MVC.User.Index())">
                                <span class="icon radius-circle"><i class="pe-7s-user"></i></span> پروفایل
                            </a>
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()">
                                    <span class="icon radius-circle"><i class="pe-7s-plug"></i></span> خروج
                                </a>
                            }
                        </li>
                    </ul>
                </nav>
                <div class="account-content dir">
                    @using (Html.BeginForm("EditOrg", "User", FormMethod.Post, new { id = "Details", @class = "checkout sec-mar" }))
                    {
                        <div class="row">
                            <div class="form-group col-sm-6 dirfloat">
                                <span style="color:red;">*</span>
                                @Html.LabelFor(m => m.Buyer.FirstName)
                                @Html.TextBoxFor(m => m.Buyer.FirstName)
                                @Html.ValidationMessageFor(model => model.Buyer.FirstName, "", new { @class = "blockdisp text-danger" })
                            </div>
                            <!--first name-->
                            <div class="form-group col-sm-6">
                                <span style="color:red;">*</span>
                                @Html.LabelFor(m => m.Buyer.Name)
                                @Html.TextBoxFor(m => m.Buyer.Name)
                                @Html.ValidationMessageFor(model => model.Buyer.Name, "", new { @class = "blockdisp text-danger" })

                            </div>
                            <!--last name-->
                            <div class="form-group col-sm-6">
                              
                                <span style="color:red;">*</span>
                                @Html.LabelFor(m => m.Buyer.CellPhone)
                                @Html.TextBoxFor(m => m.Buyer.CellPhone)
                                @Html.ValidationMessageFor(model => model.Buyer.CellPhone, "", new { @class = "blockdisp text-danger" })
                            </div>
                            <!--email address-->

                            <div class="form-group col-sm-6">
                                @Html.LabelFor(m => m.Buyer.Email)
                                @Html.TextBoxFor(m => m.Buyer.Email)
                                @Html.ValidationMessageFor(model => model.Buyer.Email, "", new { @class = "blockdisp text-danger" })
                               
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(m => m.Buyer.Phone1)
                                @Html.TextBoxFor(m => m.Buyer.Phone1)
                            </div>
                            <div class="form-group col-sm-6">
                                <span style="color:red;">*</span>
                                @Html.LabelFor(m => m.Buyer.PostalCode)
                                @Html.TextBoxFor(m => m.Buyer.PostalCode)
                                @Html.ValidationMessageFor(model => model.Buyer.PostalCode, "", new { @class = "blockdisp text-danger" })
                            </div>
                            <div class="form-group col-sm-6">
                                @{string a = JahanAraShop.Services.Utilities.FarsiDateTimeNow();}
                                @Html.LabelFor(m => m.Buyer.FarsiBirthDate)
                                @Html.EditorFor(m => m.Buyer.FarsiBirthDate, new { htmlAttributes = new { id = "OrganizationsFarsiBirthDate", @class = "name-element txt", name = "OrganizationsFarsiBirthDate", placeholder = "----/--/--", maxlength = "10", onclick = "PersianDatePicker.Show(this,'" + a + "')" } })
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(m => m.Buyer.FarsiMarriageDate)
                                @Html.EditorFor(m => m.Buyer.FarsiMarriageDate, new { htmlAttributes = new { id = "OrganizationsFarsiMarriageDate", @class = "name-element txt", name = "OrganizationsFarsiMarriageDate", placeholder = "----/--/--", maxlength = "10", onclick = "PersianDatePicker.Show(this,'" + a + "')" } })
                            </div>
                            <div class="form-group col-sm-6">
                                <label>استان</label>
                                @Html.DropDownListFor(m => m.Buyer.ProvinceId, Model.States, new { @class = "name-element txt ProvinceId input-validation-error", data_val = "true", dir = "auto", id = "ProvinceId" })
                            </div>
                            <div class="form-group col-sm-6">
                                <label>شهر</label>
                                @Html.DropDownListFor(m => m.Buyer.CityId, (IEnumerable<SelectListItem>)Model.Counties, new { @class = "name-element txt CityId input-validation-error", data_val = "true", dir = "auto", id = "CityId" })
                                
                            </div>
                            <div class="row additional-fields">
                                <div class="col-sm-12 form-group">
                                    @Html.LabelFor(m => m.Buyer.Address)
                                    @Html.TextAreaFor(model => model.Buyer.Address, new { placeholder = "آدرس" })
                                    @Html.ValidationMessageFor(model => model.Buyer.Address, "", new { @class = "blockdisp text-danger" })
                                </div>
                            </div>
                            <div class="form-group col-sm-12">
                                <input style="float:left" type="submit" value="ویرایش اطلاعات">
                            </div>
                        </div>
                                    }
                </div>
            </div>
        </div>
    </div>
</main>
<!--main-->

<script src="~/Content/js/PersianDatePicker.js"></script>
<script type="text/javascript">

    jQuery(document).ready(function () {
        var $Province = $("#ProvinceId");
        var $County = $("#CityId");
        $Province.prepend("<option value='' disabled selected hidden>انتخاب نمایید ...</option>");
        $($Province.change(function () {
            var county = "<option value='' disabled selected hidden>در حال بارگذاری ...</option>";
            $County.html(county);
            var val = $(this).val();
            county = "";
            $.getJSON("/Shop/GetCounty/" + val, function (data) {
                county = "<option value='' disabled selected hidden>انتخاب نمایید ...</option>";
                $.each(data, function (index, item) {
                    if ($("#County").val() === item.Value) {
                        county += "<option value='" + item.Value + "' selected>" + item.Text + "</option>";
                    }
                    else {
                        county += "<option value='" + item.Value + "'>" + item.Text + "</option>";
                    }
                });
                $County.html(county);
            });

        }));



    });
</script>