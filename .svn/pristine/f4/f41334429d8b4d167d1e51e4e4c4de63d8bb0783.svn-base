    //check if img exists
    function fileExists(fileLocation) {
        var response = $.ajax({
            url: fileLocation,
            type: 'HEAD',
            async: false
        }).status;
        return response;
    }

    //Price Filter
    function GetPricePageData()
    
    {

        var MinPrice=parseInt($("#amount1").val().replace(/,/g, ""));
        var MaxPrice=parseInt($("#amount2").val().replace(/,/g, ""));
        var stylemin=$("#amount1").css(left);
        GetPageData(1,pageSize,"",MinPrice,MaxPrice);

   
    
    } 


    function GetPageData(pageNum, pageSize,brandlist,MinPrice,MaxPrice) {
        if(pageSize==null ) pageSize=20;
        if(brandlist==null) brandlist="";
        if(MaxPrice==null) MaxPrice=0;
        if(MinPrice==null) MinPrice=0;
       
        var proucts = "";
        var GoodType="";
        $.ajax({
            type: 'Post',
            url: '/Product/GetPagingCategories/',
            data: { "pageNumber": pageNum, "pageSize": pageSize, "GroupID": @ViewBag.GroupID, "ChekedBrands":brandlist, "MinPrice":MinPrice,"MaxPrice":MaxPrice},
            dataType: "json",
            success: function (data) {
                if (!data.result) {
                    for (var i = 0; i < data.Data.length; i++) {   
                        proucts += "<li class='product'>";
                        proucts += "<figure class='img-animi'>";
                        proucts += "<div class='actions trans'>";
                        proucts += "<a class='link-layer' href='#'>&nbsp;</a>";
                        proucts += "<a href='#' class='actn add-to-favorite' data-toggle='tooltip' data-placement='top' title='Add to Wishlist'><i class='pe-7s-like'></i></a>";
                        proucts += "<a href=<a href='#' class='actn add-to-cart' data-toggle='tooltip' data-placement='top' title='Add to Cart'><i class='pe-7s-cart'></i></a>";
                        proucts += "<a href='#quick-view-popup' class='actn' data-toggle='tooltip' data-placement='top' data-rel='quickview-popup' title='Quick View'><i class='pe-7s-look'></i></a>";
                        proucts += "</div>";
                        var file= "@(JahanAraShop.Application.Resources.Paths.ImageFolder)Products/" + data.Data[i].BarCode + ".jpg";
                        
                        //if image exists
                        if(fileExists(file)==200)
                        {
                            proucts += "<a href='#'><img src='@(JahanAraShop.Application.Resources.Paths.ImageFolder)Products/" + data.Data[i].BarCode + ".jpg' alt=''></a>";
                        }
                        else
                        {
                            proucts += "<a href='#'><img src='@(JahanAraShop.Application.Resources.Paths.ImageFolder)Products/defult.jpg' alt=''></a>";

                        }
                             proucts += "</div>";
                             proucts += "</div>";
                             proucts += "</figure>";
                             proucts += "<div class='price-wrap'>";
                             proucts += "<div class='price'><del>" + ReplaceNumberWithCommas(data.Data[i].RetailPrice) + "</del><ins>" + ReplaceNumberWithCommas(data.Data[i].RetailPrice) + "</ins></div>";
                             proucts += "</div>";
                             proucts+="<div class='star-rate'><i class='fa fa-star'></i><i class='fa fa-star'></i><i class='fa fa-star'></i><i class='fa fa-star'></i><i class='fa fa-star-half-full'></i></div>";
                             proucts += "<h4><a href='#'>" + data.Data[i].Name + "</a></h4>";
                             proucts += "</li>";
                    }
                    
                    $("ul.products").html(proucts);
                    PaggingTemplate(data.TotalPages, data.CurrentPage);

                    for (var i = 0; i < data.GoodTypes.length; i++)
                    { 
                        GoodType += "<li> <a href='#'><span class='item-count'>"+data.GoodTypes[i].Name+"</span> <input class='type' onclick='CheckBrandList()' value='"+data.GoodTypes[i].ID+"' type='checkbox'/></a></li>";

                    }
                    $("ul.detail-cat").html(GoodType);

                    //fill rangePrice
                   
                    var rangePrice="<span> از "+ReplaceNumberWithCommas(data.MinPrice)+"   تا "+ReplaceNumberWithCommas(data.MaxPrice)+"</span>";
                    $("#amount").html(rangePrice);
                    rangeSlider(data.MinPrice,data.MaxPrice);

                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                alert('error: ' + textStatus + ': ' + errorThrown);
            }
        });

    }


    
    //PriceSlider
    function rangeSlider(Min,Max) {
        $('#price-range').slider({
            range: true,
            min: Min,
            max: Max,
            values: [Min, Max],
            slide: function (event, ui) {
                $('#amount').html("ریال" + ReplaceNumberWithCommas(ui.values[0]) + " - ریال" + ReplaceNumberWithCommas(ui.values[1]));
                $('#amount1').val(ReplaceNumberWithCommas(ui.values[0]));
                $('#amount2').val(ReplaceNumberWithCommas(ui.values[1]));
                
            }
            
        });
    }
    
    //paging template
    function PaggingTemplate(totalPage,currentPage) {
        var template = "";
        var TotalPages = totalPage;
        var CurrentPage = currentPage;
        var PageNumberArray = Array();

        var countIncr = 1;
        for (var i = currentPage; i <= totalPage; i++) {
            PageNumberArray[0] = currentPage;
            if (totalPage != currentPage && PageNumberArray[countIncr - 1] != totalPage) {
                PageNumberArray[countIncr] = i + 1;

            }
            countIncr++;
        };
        PageNumberArray = PageNumberArray.slice(0, 5);
        var FirstPage = 1;
        var LastPAge = totalPage;
        var ForwardOne=TotalPages;
        if (totalPage != currentPage) {
             ForwardOne = currentPage + 1;
        }
        var BackwardOne = 1
        if (currentPage > 1) {
            BackwardOne = currentPage - 1;
        }

        //if no filter price set use defult
        var MinPrice=$("#amount1").val().replace(/,/g, "");
        var MaxPrice=$("#amount2").val().replace(/,/g, "");
        if(MinPrice=="" || MinPrice==null || MinPrice==undefined)
        { 
            var result = "<span >" + TotalPages  + " از  " + CurrentPage + " صفحه </span>"

            if(FirstPage==CurrentPage)
            {
                template += '<li><a class="prev page-numbers" onclick="GetPageData(' + FirstPage + ')" >&lt;&lt;</a></li>';
            
            }
            else
            {

                template += '<li><a class="prev page-numbers" onclick="GetPageData(' + FirstPage + ')" >&lt;&lt;</a></li>';
                template += '<li><a class="prev page-numbers" onclick="GetPageData(' + BackwardOne + ')" >&lt;</a></li>';
            }

            var numberingLoop = "";
            for (var i = 0; i < PageNumberArray.length; i++) {

                if(PageNumberArray[i]==CurrentPage)
                {
                    numberingLoop = numberingLoop +'<li><a href="#" class="page-numbers current "  onclick="GetPageData(' + PageNumberArray[i] + ')" >' + PageNumberArray[i] + '</a></li>'
                }
                else
                {
                    numberingLoop = numberingLoop +'<li><a href="#" class="page-numbers "  onclick="GetPageData(' + PageNumberArray[i] + ')" >' + PageNumberArray[i] + '</a></li>'

                }

            }
            if(ForwardOne!=TotalPages)
            {

                template = template + numberingLoop + '<li><a  class="next page-numbers" onclick="GetPageData(' + ForwardOne + ')">&gt;</a></li>' +
               '<li><a  class="next page-numbers" onclick="GetPageData(' + LastPAge + ')">&gt;&gt;</a></li>'
            }
            else
            {

                template = template + numberingLoop +
               '<li><a  class="next page-numbers" onclick="GetPageData(' + LastPAge + ')">&gt;&gt;</a></li>'
            }

            $("ul.page-numbers").html(template);
            $(".result-count").html(result);
            currentPageTemp=CurrentPage;


           
        }

        else
        {
            var result = "<span >" + TotalPages  + " از  " + CurrentPage + " صفحه </span>"

            if(FirstPage==CurrentPage)
            {
                template += '<li><a class="prev page-numbers" onclick="GetPageData(' + FirstPage +','+pageSize+','+null+' ,'+MinPrice+','+MaxPrice+')" >&lt;&lt;</a></li>';
            
            }
            else
            {

                template += '<li><a class="prev page-numbers" onclick="GetPageData(' + FirstPage + ','+pageSize+','+null+' ,'+MinPrice+','+MaxPrice+')" >&lt;&lt;</a></li>';
                template += '<li><a class="prev page-numbers" onclick="GetPageData(' + BackwardOne +','+pageSize+','+null+' ,'+MinPrice+','+MaxPrice+')" >&lt;</a></li>';
            }

            var numberingLoop = "";
            for (var i = 0; i < PageNumberArray.length; i++) {

                if(PageNumberArray[i]==CurrentPage)
                {
                    numberingLoop = numberingLoop +'<li><a href="#" class="page-numbers current "  onclick="GetPageData(' + PageNumberArray[i] + ','+pageSize+','+null+' ,'+MinPrice+','+MaxPrice+')" >' + PageNumberArray[i] + '</a></li>'
                }
                else
                {
                    numberingLoop = numberingLoop +'<li><a href="#" class="page-numbers "  onclick="GetPageData(' + PageNumberArray[i] + ','+pageSize+','+null+','+MinPrice+','+MaxPrice+')" >' + PageNumberArray[i] + '</a></li>'

                }

            }
            if(ForwardOne!=TotalPages)
            {

                template = template + numberingLoop + '<li><a  class="next page-numbers" onclick="GetPageData(' + ForwardOne +','+pageSize+','+null+' ,'+MinPrice+','+MaxPrice+')">&gt;</a></li>' +
               '<li><a  class="next page-numbers" onclick="GetPageData(' + LastPAge +','+pageSize+','+null+' ,'+MinPrice+','+MaxPrice+')">&gt;&gt;</a></li>'
            }
            else
            {

                template = template + numberingLoop +
               '<li><a  class="next page-numbers" onclick="GetPageData(' + LastPAge + ','+pageSize+','+null+' ,'+MinPrice+','+MaxPrice+')">&gt;&gt;</a></li>'
            }

            $("ul.page-numbers").html(template);
            $(".result-count").html(result);
            currentPageTemp=CurrentPage;
          

        }

    }

    function ReplaceNumberWithCommas(yourNumber) {
        var n = yourNumber.toString().split(".");
        n[0] = n[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        return n.join(".");
    }
</script>